[ -n "${NETLIB_VERSION:-}" ] && return 0;
NETLIB_VERSION="0.1";

inherit os log core;
$PROGRAM 'sed';
$PROGRAM 'ipcalc';

__FD_TCP_DOWNLOAD=5;

__URL_HOSTNAME=0;
__URL_PORT=1;
__URL_URI=2;

_TMP_DIR='/tmp/';

#detect wget
_HAS_WGET=1; command -v wget >/dev/null 2>&1 || __HAS_WGET=0;
